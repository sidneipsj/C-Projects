@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="hero-unit">
        <h2>Queima de Estoque</h2>
        <p>
            Promoção na secao de monitores
        </p>
    </div> 
    <div class="row-fluid">
        <!-- produtos aqui -->
        @foreach (var produto in ViewBag.Produtos)
        {
            <div class="span4">
                <h2>@produto.Nome</h2>
                <p>@produto.Descricao</p>
                <p>@produto.Preco</p>
            </div>
        }
    </div>


